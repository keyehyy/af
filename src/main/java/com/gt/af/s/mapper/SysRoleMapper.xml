<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gt.af.s.mapper.SysRoleMapper">
    <!--查询单个-->
    <select id="querySysRoleById" resultType="com.gt.af.s.domain.SysRole">
        select
          #allSqlColumn()

        from sys_role
        where id = #{id}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="querySysRoleAll" resultType="com.gt.af.s.domain.SysRole">
        select
          #allSqlColumn()

        from sys_role
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                and role_desc = #{roleDesc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertSysRole" parameterType="com.gt.af.s.domain.SysRole">
        insert into sys_role(id, role_name, role_desc)
        values (#{id}, #{roleName}, #{roleDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateSysRole">
        update sys_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleDesc != null and roleDesc != ''">
                role_desc = #{roleDesc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteSysRoleById">
        delete from sys_role where id = #{id}
    </delete>

</mapper>
